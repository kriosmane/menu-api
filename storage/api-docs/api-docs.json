    "components": {
        "schemas": {
            "Item": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": "true",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "example": "Pizza"
                    },
                    "description": {
                        "type": "string",
                        "example": "description"
                    },
                    "properties": {
                        "type": "array",
